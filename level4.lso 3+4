    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Style Advisor Challenge</title>
    <style>
        body { font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; background-color: #fce4ec; text-align: center; padding: 20px; }
        .game-container { max-width: 600px; margin: 0 auto; background: white; padding: 20px; border-radius: 15px; box-shadow: 0 10px 25px rgba(0,0,0,0.1); }
        .event-card { background-color: #e3f2fd; padding: 20px; border-radius: 10px; margin-bottom: 20px; border: 2px solid #2196f3; }
        .h1-title { color: #d81b60; }
        .question { font-size: 18px; margin-bottom: 15px; font-weight: bold; }
        .grid-options { display: grid; grid-template-columns: 1fr 1fr; gap: 15px; }
        .option-card { border: 2px solid #ddd; border-radius: 10px; padding: 10px; cursor: pointer; transition: all 0.3s; }
        .option-card:hover { border-color: #d81b60; transform: translateY(-3px); }
        .option-img { width: 100%; height: 150px; object-fit: cover; border-radius: 8px; }
        .feedback-area { margin-top: 20px; font-weight: bold; padding: 15px; border-radius: 8px; display: none; }
        .correct { background-color: #d4edda; color: #155724; }
        .incorrect { background-color: #f8d7da; color: #721c24; }
        .btn-next { background-color: #2196f3; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer; margin-top: 15px; display: none; }
    </style>
