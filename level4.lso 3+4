<body>

<div class="game-container">
    <h1 class="h1-title">üëî The Style Advisor</h1>
    <p>Help your friend choose the <b>appropriate</b> attire.</p>
    
    <div id="game-content">
        </div>
</div>

<script>
    const scenarios = [
        {
            event: "Wedding Anniversary (Formal Dinner)",
            prompt: "It's a 50th Wedding Anniversary at a fancy hotel. What should he wear?",
            options: [
                { id: 1, text: "Tuxedo & Bow Tie", img: "https://images.unsplash.com/photo-1592873302740-4a06d337d348?w=300&q=80", correct: true, feedback: "Perfect! If it's a formal anniversary, he must wear a tuxedo." },
                { id: 2, text: "Jeans & T-Shirt", img: "https://images.unsplash.com/photo-1576995853123-5a297da40303?w=300&q=80", correct: false, feedback: "Oh no! That is inappropriate. It's too casual for a formal dinner." }
            ]
        },
        {
            event: "Company Cookout (Team Building)",
            prompt: "The company is having a BBQ in the park. What should she wear?",
            options: [
                { id: 1, text: "Evening Gown", img: "https://images.unsplash.com/photo-1566174053879-31528523f8ae?w=300&q=80", correct: false, feedback: "Too much! An evening gown is inappropriate for a park cookout." },
                { id: 2, text: "Casual Outfit", img: "https://images.unsplash.com/photo-1515886657613-9f3515b0c78f?w=300&q=80", correct: true, feedback: "Great choice! Casual attire is appropriate for a cookout." }
            ]
        },
        {
            event: "Business Meeting",
            prompt: "She has an important meeting with a new client. What is appropriate?",
            options: [
                { id: 1, text: "Business Suit", img: "https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=300&q=80", correct: true, feedback: "Correct. A suit is appropriate for business meetings." },
                { id: 2, text: "Beach Outfit", img: "https://images.unsplash.com/photo-1596451190630-186aff535bf2?w=300&q=80", correct: false, feedback: "No way! That is definitely inappropriate for the office." }
            ]
        }
    ];

    let currentIdx = 0;
    const container = document.getElementById('game-content');

    function loadScenario() {
        if (currentIdx >= scenarios.length) {
            container.innerHTML = "<h2>üéâ Great Job!</h2><p>You are a fashion expert.</p><button onclick='location.reload()' class='btn-next' style='display:inline-block'>Play Again</button>";
            return;
        }

        const data = scenarios[currentIdx];
        container.innerHTML = `
            <div class="event-card">
                <h3>üìÖ Event: ${data.event}</h3>
                <p class="question">${data.prompt}</p>
            </div>
            <div class="grid-options">
                ${data.options.map(opt => `
                    <div class="option-card" onclick="checkAnswer(${opt.id})">
                        <img src="${opt.img}" class="option-img">
                        <p>${opt.text}</p>
                    </div>
                `).join('')}
            </div>
            <div id="feedback" class="feedback-area"></div>
            <button id="next-btn" class="btn-next" onclick="nextLevel()">Next Challenge ‚û°Ô∏è</button>
        `;
    }

    window.checkAnswer = function(id) {
        const data = scenarios[currentIdx];
        const selected = data.options.find(o => o.id === id);
        const fbBox = document.getElementById('feedback');
        const nextBtn = document.getElementById('next-btn');

        fbBox.style.display = 'block';
        fbBox.className = 'feedback-area ' + (selected.correct ? 'correct' : 'incorrect');
        fbBox.innerText = selected.feedback;

        if (selected.correct) {
            nextBtn.style.display = 'inline-block';
            // Disable clicks
            document.querySelectorAll('.option-card').forEach(el => el.onclick = null);
        }
    };

    window.nextLevel = function() {
        currentIdx++;
        loadScenario();
    };

    loadScenario();
</script>

</body>
</html>
